import java.awt.Component.*;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import javax.swing.*;
import java.net.*;
import java.io.*;

public class WebReader extends JFrame {
    JTextArea box = new JTextArea("getting datta...");
    
    public WebReader(){
        super("get File Application");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(700, 300);
        JScrollPane pane = new JScrollPane(box);
        add(pane);
        setVisible(true);
        
    }
    void getData(String address) throws MalformedURLException{
        setTitle(address);
        URL page = new URL(address);
        StringBuilder text = new StringBuilder();
        try{
            HttpURLConnection conn =(HttpURLConnection)
                    page.openConnection();
            conn.connect();
            InputStreamReader in = new InputStreamReader(
            (InputStream) conn.getContent());
            
            BufferedReader buff = new BufferedReader(in);
            box.setText("Getting data...");
            
            
            
            String line;
            
               
            
            
            do{
                line = buff.readLine();
                text.append(line);
                text.append("\n");
            } while ( line != null );
            box.setText(text.toString());
            
            
            conn.getResponseMessage();
            System.out.println(conn.getAllowUserInteraction());
            
           

            
                
                page.openStream();
                page.getUserInfo();
                page.getAuthority();
                System.out.println(page.getDefaultPort());
                System.out.println(page.getHost());
                
                page.getPort();
                                        
            
            
   
        
    }catch (IOException e){
                    System.out.println(e.getMessage());
                    
                    }
    } 
                   
    public static void main(String[] args){
        if (args.length < 1){
            System.out.println("Usage: java web reader url");
            
            
        }
        WebReader app = new WebReader();
       try{ app.getData( "https://github.com/AdamBien/lightfish.git" );    
       }catch(MalformedURLException m){
           System.out.println("bad url");
       }
}
}
